{
  // 1. Configurar el "builder" para el runtime de PHP de la comunidad (único archivo para el servicio de vercel)
  "builds": [
    {
      "src": "index.php",
      "use": "@vercel/php" 
      // Si el builder oficial no funciona, puedes probar con "@vercel/php-web-api" o buscar el builder comunitario más reciente.
    }
  ],
  // 2. Configurar las "rutas" para que todo el tráfico vaya a tu index.php
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.php"
    }
  ]
}
